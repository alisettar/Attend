@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model PaginatedResponse<EventViewModel>

@{
    ViewData["Title"] = Localizer["Events"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@Localizer["Events"]</h2>
    <a asp-action="Create" class="btn btn-primary">@Localizer["CreateEvent"]</a>
</div>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="@Localizer["SearchEvents"]" value="@ViewBag.SearchTerm" />
        <button type="submit" class="btn btn-outline-secondary">@Localizer["Search"]</button>
    </div>
</form>

@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Localizer["Title"]</th>
                    <th>@Localizer["Description"]</th>
                    <th>@Localizer["Date"]</th>
                    <th>@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model.Items)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.Description</td>
                        <td>@evt.Date.ToString("dd MMM yyyy HH:mm")</td>
                        <td class="action-buttons">
                            <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-sm btn-info">@Localizer["Details"]</a>
                            <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-sm btn-warning">@Localizer["Edit"]</a>
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-event-id="@evt.Id" data-event-title="@evt.Title">@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-search="@ViewBag.SearchTerm">@Localizer["Previous"]</a>
            </li>
            
            @if (Model.Page > 3)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-search="@ViewBag.SearchTerm">1</a>
                </li>
                @if (Model.Page > 4)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }
            
            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.SearchTerm">@i</a>
                </li>
            }
            
            @if (Model.Page < Model.TotalPages - 2)
            {
                @if (Model.Page < Model.TotalPages - 3)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-search="@ViewBag.SearchTerm">@Model.TotalPages</a>
                </li>
            }
            
            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-search="@ViewBag.SearchTerm">@Localizer["Next"]</a>
            </li>
        </ul>
    </nav>
}
else
{
    <p class="text-muted">@Localizer["NoEventsFound"]</p>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@Localizer["ConfirmDelete"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteEventTitle"></strong> @Localizer["WillBeDeleted"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .action-buttons .btn {
        margin: 2px;
        min-width: 44px;
        min-height: 44px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
    
    @@media (max-width: 768px) {
        .action-buttons {
            white-space: nowrap;
        }
        .action-buttons .btn {
            padding: 8px 12px;
        }
    }
</style>

<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var eventId = button.getAttribute('data-event-id');
        var eventTitle = button.getAttribute('data-event-title');
        
        var form = document.getElementById('deleteForm');
        form.action = '@Url.Action("Delete")/' + eventId;
        
        var titleElement = document.getElementById('deleteEventTitle');
        titleElement.textContent = eventTitle;
    });
</script>

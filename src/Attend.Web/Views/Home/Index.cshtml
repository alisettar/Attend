@model PaginatedResponse<EventViewModel>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Dashboard"];
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="stat-card h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1">@Localizer["TotalEvents"]</h6>
                    <div class="stat-number">@Model.TotalCount</div>
                </div>
                <i class="bi bi-calendar-event"></i>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stat-card h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1">@Localizer["ActiveEvents"]</h6>
                    <div class="stat-number">@Model.Items.Count(e => e.Date >= DateTime.Now)</div>
                </div>
                <i class="bi bi-lightning-charge"></i>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stat-card h-100" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1">@Localizer["QuickScan"]</h6>
                    <a asp-controller="Scanner" asp-action="Index" class="btn btn-light btn-sm mt-2">
                        <i class="bi bi-qr-code-scan"></i> @Localizer["OpenScanner"]
                    </a>
                </div>
                <i class="bi bi-qr-code"></i>
            </div>
        </div>
    </div>
</div>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-calendar-check text-primary"></i> @Localizer["UpcomingEvents"]
    </h2>
    <a asp-controller="Events" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> @Localizer["CreateEvent"]
    </a>
</div>

<!-- Events Grid -->
@if (Model.Items.Any())
{
    <div class="row">
        @foreach (var evt in Model.Items)
        {
            var isPast = evt.Date < DateTime.Now;
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card event-card h-100">
                    <div class="card-body">
                        <div class="d-flex mb-3">
                            <div class="event-date me-3">
                                <div class="day">@evt.Date.Day</div>
                                <div class="month">@evt.Date.ToString("MMM")</div>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">@evt.Title</h5>
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-clock"></i> @evt.Date.ToString("HH:mm")
                                </p>
                            </div>
                        </div>
                        
                        <p class="card-text text-muted">
                            @(evt.Description?.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            @if (isPast)
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-check-circle"></i> @Localizer["Completed"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-calendar-check"></i> @Localizer["Upcoming"]
                                </span>
                            }
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" 
                               class="btn btn-sm btn-outline-primary">
                                @Localizer["ViewDetails"] <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalCount > Model.PageSize)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                {
                    <li class="page-item @(Model.Page == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Page >= Math.Ceiling((double)Model.TotalCount / Model.PageSize) ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-calendar-x display-1 text-muted"></i>
        <h4 class="mt-3 text-muted">@Localizer["NoEventsAvailable"]</h4>
        <p class="text-muted">@Localizer["CreateYourFirstEvent"]</p>
        <a asp-controller="Events" asp-action="Create" class="btn btn-primary mt-3">
            <i class="bi bi-plus-circle"></i> @Localizer["CreateEvent"]
        </a>
    </div>
}

@using Microsoft.Extensions.Options
@using Attend.Web.Models
@inject IOptions<BrandingSettings> BrandingOptions
@{
    ViewData["Title"] = "Gizlilik Politikası";
    Layout = null;
    var branding = BrandingOptions.Value;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body { padding: 40px 20px; background: #f8f9fa; }
        .content-card { max-width: 800px; margin: 0 auto; background: white; padding: 40px; border-radius: 10px; }
    </style>
</head>
<body>
    <div class="content-card">
        <h1 class="mb-4">Gizlilik Politikası</h1>
        
        <h3>1. Veri Sorumlusu</h3>
        <p>[@branding.CompanyName], KVKK kapsamında veri sorumlusudur.</p>
        
        <h3>2. Toplanan Kişisel Veriler</h3>
        <p>Etkinlik kayıt formunda aşağıdaki bilgiler toplanmaktadır:</p>
        <ul>
            <li>Ad Soyad</li>
            <li>Telefon Numarası</li>
        </ul>
        
        <h3>3. Verilerin İşlenme Amacı</h3>
        <p>Toplanan kişisel veriler:</p>
        <ul>
            <li>Etkinlik katılım takibi</li>
            <li>QR kod üretimi ve doğrulama</li>
            <li>İletişim kurulması</li>
        </ul>
        <p>amaçlarıyla işlenmektedir.</p>
        
        <h3>4. Verilerin Aktarımı</h3>
        <p>Kişisel verileriniz üçüncü kişilerle paylaşılmamaktadır.</p>
        
        <h3>5. Haklarınız</h3>
        <p>KVKK kapsamında:</p>
        <ul>
            <li>Kişisel verilerinize erişim talep etme</li>
            <li>Düzeltme talep etme</li>
            <li>Silme talep etme</li>
            <li>İtiraz etme</li>
        </ul>
        <p>haklarınız bulunmaktadır.</p>
        
        <h3>6. İletişim</h3>
        <p>Sorularınız için: @branding.ContactEmailUser<i class="fa-solid fa-at"></i>@branding.ContactEmailDomain</p>
        
        <div class="mt-5 text-center">
            <button onclick="window.close()" class="btn btn-secondary">Kapat</button>
        </div>
    </div>
</body>
</html>

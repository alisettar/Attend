@using Microsoft.Extensions.Options
@using Attend.Web.Models
@inject IOptions<BrandingSettings> BrandingOptions
@model Attend.Web.Models.RegisterFormModel
@{
    ViewData["Title"] = "Kayıt Formu";
    Layout = null;
    var tenantHash = ViewBag.TenantHash as string;
    var branding = BrandingOptions.Value;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @branding.AppName</title>
    <link rel="icon" type="image/svg+xml" href="@branding.FaviconUrl" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <script src="https://www.google.com/recaptcha/api.js?render=@(ViewBag.RecaptchaSiteKey ?? "YOUR_SITE_KEY")"></script>
    <style>
        :root {
            --primary-color: @branding.PrimaryColor;
            --secondary-color: @branding.SecondaryColor;
        }
        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px;
        }
        .register-card {
            max-width: 500px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 40px 30px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        .form-control, .btn {
            min-height: 54px;
            font-size: 16px;
            border-radius: 12px;
        }
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            font-weight: 600;
            letter-spacing: 0.5px;
            min-height: 54px;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }
        .logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 30px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            color: white;
            font-weight: bold;
        }
        .form-check-input {
            width: 1.5em;
            height: 1.5em;
        }
        .form-check-label a {
            color: var(--primary-color);
            text-decoration: none;
        }
        .form-check-label a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="register-card">
            <div class="logo">@branding.AppName.Substring(0, 1)</div>
            <h2 class="text-center mb-2">@branding.AppName</h2>
            <p class="text-center text-muted mb-4">Etkinlik Kaydı</p>
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <form asp-action="Register" asp-route-tenantHash="@tenantHash" method="post" id="registerForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">
                        <i class="bi bi-person-fill"></i> Ad Soyad *
                    </label>
                    <input asp-for="Name" 
                           class="form-control" 
                           placeholder="Adınız ve soyadınız" 
                           autofocus 
                           required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-semibold">
                        <i class="bi bi-telephone-fill"></i> Telefon Numarası *
                    </label>
                    <input asp-for="Phone" 
                           type="tel" 
                           class="form-control" 
                           id="phoneInput"
                           placeholder="05XX XXX XX XX" 
                           required />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                    <small class="text-muted">Örnek: 05XX XXX XX XX</small>
                </div>

                <div class="mb-4">
                    <div class="form-check">
                        <input asp-for="AcceptedTerms" 
                               class="form-check-input" 
                               type="checkbox" 
                               required />
                        <label class="form-check-label ms-2" asp-for="AcceptedTerms">
                            <a href="/privacy-policy" target="_blank">Gizlilik Politikası</a> ve 
                            <a href="/consent-text" target="_blank">Açık Rıza Metni</a>'ni okudum, kabul ediyorum. *
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle-fill"></i> Kaydı Tamamla
                </button>
            </form>
            
            <div class="text-center mt-3">
                <small class="text-muted">@branding.CompanyName</small>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Phone number masking
        const phoneInput = document.getElementById('phoneInput');
        phoneInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 0 && value[0] !== '0') {
                value = '0' + value;
            }
            if (value.length > 11) {
                value = value.substring(0, 11);
            }
            e.target.value = value;
        });

        // reCAPTCHA v3
        const form = document.getElementById('registerForm');
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const siteKey = '@(ViewBag.RecaptchaSiteKey ?? "YOUR_SITE_KEY")';
            
            if (siteKey === 'YOUR_SITE_KEY') {
                form.submit(); // Skip reCAPTCHA in dev
                return;
            }

            grecaptcha.ready(function() {
                grecaptcha.execute(siteKey, {action: 'register'}).then(function(token) {
                    document.getElementById('recaptchaToken').value = token;
                    form.submit();
                });
            });
        });
    </script>
</body>
</html>

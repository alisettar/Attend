@using Microsoft.Extensions.Options
@using Attend.Web.Models
@inject IOptions<BrandingSettings> BrandingOptions
@{
    ViewData["Title"] = "KayÄ±t BaÅŸarÄ±lÄ±";
    Layout = null;
    var qrCodeImage = ViewBag.QRCodeImage as string;
    var userName = ViewBag.UserName as string;
    var userId = ViewBag.UserId as Guid?;
    var tenantName = ViewBag.TenantName as string;
    var branding = BrandingOptions.Value;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @branding.AppName</title>
    <link rel="icon" type="image/svg+xml" href="@branding.FaviconUrl" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        :root {
            --primary-color: @branding.PrimaryColor;
            --secondary-color: @branding.SecondaryColor;
        }
        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 10px;
        }
        .success-card {
            max-width: 450px;
            width: 100%;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            padding: 20px 15px 15px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            text-align: center;
        }
        .success-icon {
            width: 50px;
            height: 50px;
            margin: 0 auto 10px;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 30px;
            color: white;
            animation: scaleIn 0.5s ease-out;
        }
        @@keyframes scaleIn {
            from { transform: scale(0); }
            to { transform: scale(1); }
        }
        .tenant-badge {
            display: inline-block;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 6px 16px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-bottom: 12px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
        h2 {
            font-size: 1.3rem;
            margin-bottom: 0.3rem;
            font-weight: 700;
        }
        .welcome-text {
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }
        .qr-container {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 15px;
            margin: 15px 0;
        }
        .qr-code {
            max-width: 200px;
            height: auto;
            margin: 0 auto;
            display: block;
            border-radius: 8px;
        }
        .qr-label {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #495057;
        }
        .instructions-box {
            margin-top: 12px;
            padding: 12px;
            background: #fff;
            border-radius: 8px;
            border-left: 3px solid var(--primary-color);
        }
        .instructions-box .main-text {
            font-size: 1rem;
            font-weight: 600;
            color: #212529;
            margin-bottom: 8px;
            line-height: 1.4;
        }
        .instructions-box .hint {
            font-size: 0.9rem;
            color: #495057;
            line-height: 1.6;
            margin: 0;
        }
        .btn {
            min-height: 48px;
            border-radius: 10px;
            font-weight: 600;
            margin: 5px 0;
            font-size: 0.95rem;
        }
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
        }
        .btn-outline-primary {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
        }
        .btn:active {
            transform: scale(0.98);
        }
        .company-name {
            color: #6c757d;
            font-size: 0.8rem;
            margin-top: 12px;
        }
        
        /* Detect mobile device */
        .desktop-only {
            display: block;
        }
        .mobile-only {
            display: none;
        }
        
        @@media (max-width: 768px) {
            .desktop-only {
                display: none;
            }
            .mobile-only {
                display: block;
            }
            body {
                padding: 5px;
            }
            .success-card {
                padding: 15px 12px 12px;
                border-radius: 12px;
            }
            h2 {
                font-size: 1.2rem;
            }
            .success-icon {
                width: 45px;
                height: 45px;
                font-size: 25px;
                margin-bottom: 8px;
            }
            .qr-code {
                max-width: 180px;
            }
            .qr-container {
                padding: 12px;
                margin: 12px 0;
            }
            .instructions-box .main-text {
                font-size: 0.95rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-card">
            <div class="success-icon">
                <i class="bi bi-check-lg"></i>
            </div>
            
            @if (!string.IsNullOrEmpty(tenantName))
            {
                <div>
                    <span class="tenant-badge">
                        <i class="bi bi-people-fill"></i> @tenantName Oturumu
                    </span>
                </div>
            }
            
            <h2>KayÄ±t BaÅŸarÄ±lÄ±!</h2>
            <p class="text-muted welcome-text">HoÅŸ geldiniz, <strong>@userName</strong></p>
            
            <div class="qr-container">
                <div class="qr-label">QR Kodunuz</div>
                @if (!string.IsNullOrEmpty(qrCodeImage))
                {
                    <img src="data:image/png;base64,@qrCodeImage" 
                         alt="QR Code" 
                         class="qr-code"
                         id="qrImage" />
                }
                
                <div class="instructions-box">
                    <div class="main-text">
                        <i class="bi bi-qr-code-scan text-primary"></i>
                        Bu QR kodu etkinliklere katÄ±lÄ±rken gÃ¶sterin
                    </div>
                    
                    <!-- Mobile Instructions -->
                    <div class="mobile-only">
                        <div class="hint">
                            <strong>ðŸ’¡ QR'Ä± kaydetmek iÃ§in:</strong><br>
                            AÅŸaÄŸÄ±daki "GÃ¶nder" butonuna basÄ±p kendinize gÃ¶nderin (WhatsApp, Telegram, E-posta) veya ekran gÃ¶rÃ¼ntÃ¼sÃ¼ alarak telefonunuzun galerisine kaydedin.
                        </div>
                    </div>
                    
                    <!-- Desktop Instructions -->
                    <div class="desktop-only">
                        <div class="hint">
                            ðŸ’¡ QR kodunu kaydetmek iÃ§in aÅŸaÄŸÄ±daki butonu kullanÄ±n veya saÄŸ tÄ±klayÄ±p "Resmi FarklÄ± Kaydet" seÃ§in.
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2">
                <!-- Desktop: Show download button -->
                <button class="btn btn-primary desktop-only" onclick="downloadQR()">
                    <i class="bi bi-download"></i> QR'Ä± Ä°ndir
                </button>
                
                <!-- Mobile: Show share button -->
                <button class="btn btn-primary mobile-only" onclick="shareQR()" id="shareBtnMobile">
                    <i class="bi bi-send-fill"></i> GÃ¶nder
                </button>
            </div>
            
            <p class="company-name">@branding.CompanyName</p>
        </div>
    </div>

    <script>
        // Desktop: Download QR code
        function downloadQR() {
            var qrImage = document.getElementById('qrImage');
            var link = document.createElement('a');
            link.download = 'etkinlik-qr-kod.png';
            link.href = qrImage.src;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showButtonFeedback(event.target, 'Ä°ndirildi!');
        }

        // Share QR code using Share API
        async function shareQR() {
            try {
                var qrImage = document.getElementById('qrImage');
                var response = await fetch(qrImage.src);
                var blob = await response.blob();
                var file = new File([blob], 'etkinlik-qr-kod.png', { type: 'image/png' });
                
                if (navigator.canShare && navigator.canShare({ files: [file] })) {
                    await navigator.share({
                        title: 'Etkinlik QR Kodum',
                        text: 'Etkinliklere katÄ±lÄ±m iÃ§in QR kodum',
                        files: [file]
                    });
                } else {
                    await navigator.share({
                        title: 'Etkinlik QR Kodum',
                        text: 'Etkinliklere katÄ±lÄ±m iÃ§in QR kodum'
                    });
                }
            } catch (err) {
                if (err.name !== 'AbortError') {
                    // If share fails, show alert with instructions
                    alert('QR kodunu kaydetmek iÃ§in:\n\nEkran gÃ¶rÃ¼ntÃ¼sÃ¼ alÄ±n ve telefonunuzun galerisine kaydedin.');
                }
            }
        }

        // Helper function for button feedback
        function showButtonFeedback(button, message) {
            var btn = button.closest('button');
            var originalHTML = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check-circle-fill"></i> ' + message;
            btn.classList.add('btn-success');
            btn.classList.remove('btn-primary');
            
            setTimeout(function() {
                btn.innerHTML = originalHTML;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-primary');
            }, 2000);
        }
    </script>
</body>
</html>
